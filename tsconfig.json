{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@css/*": ["assets/css/*"],
      "@com/*": ["com/*"],
      "@shared/*": ["../shared/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@root/*": ["../*"]
    }
  },
  "include": ["src", "shared", "declarations.d.ts"],
  "references": [{ "path": "./tsconfig.cli.json" }]
}
