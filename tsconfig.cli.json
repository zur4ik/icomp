{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared": ["./shared"],
      "@shared/*": ["./shared/*"],
    },
    "outDir": "dist/cli",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "noEmit": false,
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": ["cli", "shared"]
}
