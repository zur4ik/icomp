{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared": ["./shared"],
      "@shared/*": ["./shared/*"],
      "@services": ["./cli/services"],
      "@services/*": ["./cli/services/*"],
      "@plugins": ["./cli/plugins"],
      "@plugins/*": ["./cli/plugins/*"],
    },
    "outDir": "dist/cli",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "noEmit": false,
    "rootDir": ".",
    "resolveJsonModule": true,
  },
  "include": ["cli", "shared"]
}
